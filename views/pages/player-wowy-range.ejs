<!DOCTYPE html>
<html>

<head>
  <% include ../_partials/head %>
</head>

<body>
  <div id="wrapper">
    <% include ../_partials/header %>

      <div id="page-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-xs-12">
              <h1 class="page-header">WOWY by Range</h1>
            </div>
          </div>


          <% // When this form is submitted it controlled by pq-wowy-range.js which loads ajax/ax-wowy-range.ejs %>
            <form>
              <div class="row">
                <div class="col-md-4 col-xs-12">
                  <div class="form-group">
                    <label for="pq-player1name">Primary Player Name</label>
                    <select name="q2player1id" id="pq-player1name" class="form-control">
                    </select>
                  </div>
                </div>
                <div class="col-md-4 col-xs-12">
                  <div class="form-group">
                    <label for="pq-player2name">Secondary Player Name</label>
                    <select name="q2player2id" id="pq-player2name" class="form-control">
                    </select>
                  </div>
                </div>
                <div class="col-md-4 col-xs-12">
                  <div class="form-group">
                    <label for="pq-postype">Position</label>
                    <select name="q3postype[]" id="pq-postype" class="form-control" multiple="multiple">
                    </select>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4 col-xs-12">
                  <div class="form-group">
                    <label for="pq-display">Display</label>
                    <select name="q3display[]" id="pq-display" class="form-control" multiple="multiple">
                    </select>
                  </div>
                </div>
                <div class="col-md-4 col-xs-12">
                  <label for="pq-daterange">Date Range</label>
                  <input type="text" name="q0daterange" id="pq-calendar" class="form-control pq-daterange">
                  <input type="hidden" name="q1datestart" id="pq-datestart" value="">
                  <input type="hidden" name="q1dateend" id="pq-dateend" value="">
                </div>
                <div class="col-md-4 col-xs-12 text-right">
                  <label for="pq-buttons">&nbsp;</label>
                  <div class="form-group" id="pq-buttons">
                    <button class="btn btn-default" type="submit">Go</button>
                  </div>
                </div>
              </div>
            </form>
            <!-- /.form -->

            <div class="row" id="pq-loader">
              <div class="col-xs-12 text-center">
                <div class="loader"></div>
              </div>
            </div>

            <div class="row" id="pq-wowydata">
            </div>
        </div>
        <!-- /.container-fluid -->
      </div>
  </div>

  <% include ../_partials/scripts %>

    <!-- WOWY JavaScript -->
    <script src="/puckiq/js/pq-wowy-range.js"></script>
</body>

</html>